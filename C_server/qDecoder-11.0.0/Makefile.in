RM	= @RM@

all:
	@for DIR in src; do \
		echo "===> $${DIR}"; \
		(cd $${DIR}; make all); \
		echo "<=== $${DIR}"; \
	done

install:
	(cd src/; make install)

deinstall: uninstall
uninstall:
	(cd src/; make deinstall)

clean:
	@for DIR in src; do \
		echo "===> $${DIR}"; \
		(cd $${DIR}; make clean); \
		echo "<=== $${DIR}"; \
	done

distclean: clean
	@for DIR in src examples; do \
		echo "===> $${DIR}"; \
		(cd $${DIR}; make clean; ${RM} -f Makefile); \
		echo "<=== $${DIR}"; \
	done
	${RM} -rf autom4te.cache
	${RM} -f configure.lineno config.log config.status config.h
	${RM} -f Makefile
